@model FlightManager.Data.Models.Reservation

@{
    ViewData["Title"] = "Delete";
}
@if (Model.IsConfirmed)
{
    <div class="alert alert-danger">
        <h4 class="alert-heading">Cannot Delete Confirmed Reservation</h4>
        <p>This reservation has been confirmed and cannot be deleted.</p>
        <hr>
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>
}
else
{
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Reservation</h4>
        <hr/>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ReservationUser)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ReservationUserId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Flight)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Flight.AircraftNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nationality)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nationality)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TicketType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TicketType)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id"/>
            <input type="submit" value="Delete" class="btn btn-danger"/> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
}