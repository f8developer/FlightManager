@using FlightManager.Data.Models
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<FlightManager.Data.Models.Reservation>

@{
    ViewData["Title"] = "Reservations";
    var isAdmin = User.IsInRole("Admin");
}

<div class="container reservation-index">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Reservations</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Create New
        </a>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <form method="get" class="card card-body bg-light">
                <div class="row g-3">
                    <div class="col-md-3">
                        <input type="text" name="id" class="form-control form-control-sm" placeholder="User Reservation ID" value="@ViewBag.SearchId" />
                    </div>
                    <div class="col-md-3">
                        <input type="text" name="username" class="form-control form-control-sm" placeholder="Username" value="@ViewBag.SearchUsername" />
                    </div>
                    <div class="col-md-2">
                        <input type="text" name="firstName" class="form-control form-control-sm" placeholder="First Name" value="@ViewBag.SearchFirstName" />
                    </div>
                    <div class="col-md-2">
                        <input type="text" name="lastName" class="form-control form-control-sm" placeholder="Last Name" value="@ViewBag.SearchLastName" />
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-primary btn-sm w-100" type="submit">
                            <i class="fas fa-search me-1"></i> Search
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if ((string.IsNullOrEmpty(ViewBag.ErrorMessage) && ViewBag.HasSearched == true) || isAdmin)
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th>Reservation ID</th>
                                <th>Route</th>
                                <th>Schedule</th>
                                <th>Passenger</th>
                                <th>Ticket Type</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="6" class="text-center py-4">
                                        <div class="text-muted">No reservations found matching your criteria.</div>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>
                                            <div class="fw-bold">@(item.Flight != null ? $"{item.Flight.FromLocation} → {item.Flight.ToLocation}" : "No flight assigned")</div>
                                            <small class="text-muted">@(item.Flight != null ? $"Flight #{item.Flight.AircraftNumber}" : "N/A")</small>
                                        </td>
                                        <td>
                                            @if (item.Flight != null)
                                            {
                                                <div class="fw-semibold">@item.Flight.DepartureTime.ToString("MMM dd, yyyy")</div>
                                                <div class="small text-muted">
                                                    @item.Flight.DepartureTime.ToString("t") → @item.Flight.ArrivalTime.ToString("t")
                                                </div>
                                            }
                                            else
                                            {
                                                <span>N/A</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.ReservationUser != null)
                                            {
                                                <div>@item.ReservationUser.UserName</div>
                                                <small class="text-muted">@($"{item.ReservationUser.FirstName} {item.ReservationUser.LastName}")</small>
                                            }
                                            else
                                            {
                                                <span>Unknown Passenger</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge @(item.TicketType == TicketType.Business ? "bg-success" : "bg-primary")">
                                                @item.TicketType
                                            </span>
                                        </td>
                                        <td>
                                            <div class="d-flex justify-content-end gap-1">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Details">
                                                    <i class="fas fa-eye me-1"></i> View
                                                </a>
                                                @if (isAdmin)
                                                {
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Edit">
                                                        <i class="fas fa-edit me-1"></i> Edit
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                                        <i class="fas fa-trash-alt me-1"></i> Delete
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Styles {
    <style>
        .reservation-index {
            max-width: 1400px;
        }

        .table th {
            white-space: nowrap;
            font-weight: 600;
        }

        .table td {
            vertical-align: middle;
        }

        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.75rem;
            white-space: nowrap;
        }

        .table td:last-child {
            width: 1%;
        }

        .badge {
            font-size: 0.75em;
            padding: 0.35em 0.65em;
        }
    </style>
}

@section StyleLinks {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}