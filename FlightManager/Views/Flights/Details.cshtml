@using FlightManager.Data.Models
@model FlightManager.Data.Models.Flight

@{
    ViewData["Title"] = "Flight Details";
    bool isAdmin = User.IsInRole("Admin");
    var businessReserved = Model.Reservations?.Count(r => r.TicketType == TicketType.Business) ?? 0;
    var standardReserved = Model.Reservations?.Count(r => r.TicketType != TicketType.Business) ?? 0;
    var businessAvailable = Model.BusinessClassCapacity - businessReserved;
    var standardAvailable = (Model.PassengerCapacity - Model.BusinessClassCapacity) - standardReserved;
    var businessPercentage = (businessAvailable * 100) / Math.Max(1, Model.BusinessClassCapacity);
    var standardPercentage = (standardAvailable * 100) / Math.Max(1, (Model.PassengerCapacity - Model.BusinessClassCapacity));
}

<div class="flight-details-container">
    <!-- Flight Header Section -->
    <div class="flight-header">
        <div class="container">
            <div class="flight-route">
                <h1 class="display-4">
                    <span class="from-location">@Model.FromLocation</span>
                    <i class="fas fa-plane mx-3"></i>
                    <span class="to-location">@Model.ToLocation</span>
                </h1>
                <p class="flight-number">Flight #@Model.AircraftNumber</p>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- Flight Summary Card -->
        <div class="card summary-card shadow-lg">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="flight-timings">
                            <div class="timing departure">
                                <div class="timing-label">Departure</div>
                                <div class="timing-value">@Model.DepartureTime.ToString("f")</div>
                                <div class="timing-airport">@Model.FromLocation Airport</div>
                            </div>
                            <div class="flight-duration">
                                <i class="fas fa-clock"></i>
                                @{
                                    var duration = Model.ArrivalTime - Model.DepartureTime;
                                    var days = duration.Days;
                                    var hours = duration.Hours;
                                    var minutes = duration.Minutes;
                                }
                                @if (days > 0)
                                {
                                    @days

                                    <text>d </text>
                                }
                                @hours<text>h </text>
                                @minutes<text>m</text>
                            </div>
                            <div class="timing arrival">
                                <div class="timing-label">Arrival</div>
                                <div class="timing-value">@Model.ArrivalTime.ToString("f")</div>
                                <div class="timing-airport">@Model.ToLocation Airport</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="flight-info">
                            <div class="info-item">
                                <span class="info-label">Aircraft:</span>
                                <span class="info-value">@Model.AircraftType</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Pilot:</span>
                                <span class="info-value">@Model.PilotName</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Status:</span>
                                <span class="info-value badge bg-success">Scheduled</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Capacity Section -->
        <div class="capacity-section mt-4">
            <h3 class="section-title">
                <i class="fas fa-users me-2"></i>Passenger Capacity
            </h3>

            <div class="row">
                <div class="col-md-6">
                    <div class="capacity-card">
                        <h4>Business Class</h4>
                        <div class="capacity-stats">
                            <span class="available">@businessAvailable</span>
                            <span class="separator">/</span>
                            <span class="total">@Model.BusinessClassCapacity</span>
                            <span class="seats">seats available</span>
                        </div>
                        <div class="progress mt-2">
                            <div class="progress-bar bg-success"
                            role="progressbar"
                            style="width: @businessPercentage%"
                            aria-valuenow="@businessAvailable"
                            aria-valuemin="0"
                            aria-valuemax="@Model.BusinessClassCapacity">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="capacity-card">
                        <h4>Economy Class</h4>
                        <div class="capacity-stats">
                            <span class="available">@standardAvailable</span>
                            <span class="separator">/</span>
                            <span class="total">@(Model.PassengerCapacity - Model.BusinessClassCapacity)</span>
                            <span class="seats">seats available</span>
                        </div>
                        <div class="progress mt-2">
                            <div class="progress-bar bg-primary"
                            role="progressbar"
                            style="width: @standardPercentage%"
                            aria-valuenow="@standardAvailable"
                            aria-valuemin="0"
                            aria-valuemax="@(Model.PassengerCapacity - Model.BusinessClassCapacity)">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="action-buttons mt-5">
            @if (isAdmin)
            {
                <a class="btn btn-danger me-2" asp-action="Delete" asp-route-id="@Model.Id">
                    <i class="fas fa-trash me-1"></i> Delete Flight
                </a>
                <a class="btn btn-primary me-2" asp-action="Edit" asp-route-id="@Model.Id">
                    <i class="fas fa-edit me-1"></i> Edit Flight
                </a>
                <a class="btn btn-outline-secondary me-2" asp-action="Passengers" asp-route-id="@Model.Id">
                    <i class="fas fa-users me-1"></i> View Passengers
                </a>
            }
            <a class="btn btn-secondary" asp-action="Index">
                <i class="fas fa-arrow-left me-1"></i> Back to All Flights
            </a>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .flight-details-container {
            background-color: #f8f9fa;
            min-height: 100vh;
            padding-bottom: 3rem;
        }

        .flight-header {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            color: white;
            padding: 3rem 0;
            margin-bottom: 2rem;
        }

        .flight-route {
            text-align: center;
        }

            .flight-route h1 {
                font-weight: 700;
                margin-bottom: 0.5rem;
            }

            .flight-route .fa-plane {
                transform: rotate(90deg);
                color: rgba(255, 255, 255, 0.7);
            }

        .flight-number {
            font-size: 1.2rem;
            opacity: 0.8;
        }

        .summary-card {
            border: none;
            border-radius: 10px;
            margin-top: -50px;
            position: relative;
            z-index: 10;
        }

        .flight-timings {
            position: relative;
            padding: 1rem 0;
        }

        .timing {
            margin-bottom: 1.5rem;
        }

        .timing-label {
            font-size: 0.9rem;
            color: #6c757d;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .timing-value {
            font-size: 1.5rem;
            font-weight: 600;
            color: #1e3c72;
        }

        .timing-airport {
            font-size: 1rem;
            color: #495057;
        }

        .flight-duration {
            position: relative;
            margin: 1.5rem 0;
            padding-left: 2rem;
            color: #6c757d;
        }

            .flight-duration:before {
                content: "";
                position: absolute;
                left: 0;
                top: 50%;
                width: 100%;
                height: 1px;
                background-color: #dee2e6;
                z-index: -1;
            }

            .flight-duration .fa-clock {
                background-color: #f8f9fa;
                padding: 0 0.5rem;
            }

        .flight-info {
            padding: 1rem;
        }

        .info-item {
            margin-bottom: 1rem;
        }

        .info-label {
            font-weight: 600;
            color: #1e3c72;
            margin-right: 0.5rem;
        }

        .info-value {
            color: #495057;
        }

        .capacity-section {
            background: white;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }

        .section-title {
            color: #1e3c72;
            margin-bottom: 1.5rem;
            font-weight: 600;
        }

        .capacity-card {
            background: #f8f9fa;
            padding: 1.5rem;
            border-radius: 8px;
            height: 100%;
        }

            .capacity-card h4 {
                color: #1e3c72;
                font-size: 1.2rem;
                margin-bottom: 1rem;
            }

        .capacity-stats {
            font-size: 1.1rem;
            margin-bottom: 0.5rem;
        }

        .available {
            font-weight: 700;
            color: #28a745;
        }

        .total {
            font-weight: 600;
        }

        .seats {
            color: #6c757d;
            font-size: 0.9rem;
        }

        .progress {
            height: 8px;
            background-color: #e9ecef;
            border-radius: 4px;
        }

        .action-buttons {
            text-align: center;
        }

        .btn {
            padding: 0.5rem 1.5rem;
            font-weight: 500;
            border-radius: 50px;
            min-width: 150px;
        }

        @@media (max-width: 768px) {
            .flight-header {
                padding: 2rem 0;
            }

            .summary-card {
                margin-top: -30px;
            }

            .action-buttons .btn {
                display: block;
                width: 100%;
                margin-bottom: 1rem;
            }
        }
    </style>
}

@section StyleLinks {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}