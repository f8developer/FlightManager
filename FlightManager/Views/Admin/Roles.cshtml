@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Role Management";
}

<h1>Role Management</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="d-flex justify-content-between mb-3">
    <a asp-action="Index" class="btn btn-secondary">Back to User View</a>
    @if (User.IsInRole("Owner"))
    {
        <a asp-action="CreateRole" class="btn btn-success">Create New Role</a>
    }
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Users</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>
                    @{
                        var userCount = ViewBag.RoleUserCounts[item.Id];
                        if (userCount > 999)
                        {
                            <span>999+</span>
                        }
                        else
                        {
                            <span>@userCount</span>
                        }
                    }
                </td>
                <td>
                    @if (userCount == 0 && User.IsInRole("Owner"))
                    {
                        <a asp-action="DeleteRole" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>